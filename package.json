{
  "name": "minimal-store",
  "version": "0.0.0-semantically-released",
  "description": "Tiny implementation of the reactive store functionality with no dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "size": "size-limit",
    "format": "prettier --write",
    "test": "jest",
    "coverage": "jest --collect-coverage",
    "test:watch": "jest --watch --silent=false",
    "lint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n0th1ng-else/minimal-store"
  },
  "bugs": {
    "url": "https://github.com/n0th1ng-else/minimal-store/issues"
  },
  "keywords": [
    "store",
    "subscribe",
    "reactive"
  ],
  "author": "Sergey Nikitin <srg.post@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@size-limit/preset-small-lib": "4.5.0",
    "@types/jest": "26.0.0",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "circle-github-bot": "2.1.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-cli": "26.0.1",
    "jest-html-reporters": "1.2.1",
    "lint-staged": "10.2.10",
    "prettier": "2.0.5",
    "size-limit": "4.5.0",
    "ts-jest": "26.1.0",
    "typescript": "3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "500 B"
    }
  ],
  "lint-staged": {
    "*.{md,yml,json}": [
      "npm run format"
    ],
    "*.{js,ts}": [
      "npm run format",
      "npm run lint"
    ]
  }
}
