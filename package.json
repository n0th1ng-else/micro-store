{
  "name": "minimal-store",
  "version": "0.0.0-semantically-released",
  "description": "Tiny implementation of the reactive store functionality with no dependencies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.+(js|json|ts|md|yml)'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/n0th1ng-else/minimal-store"
  },
  "bugs": {
    "url": "https://github.com/n0th1ng-else/minimal-store/issues"
  },
  "keywords": [
    "store",
    "subscribe",
    "reactive"
  ],
  "author": "Sergey Nikitin <srg.post@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "circle-github-bot": "2.0.1",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "jest": "25.2.7",
    "jest-cli": "25.2.7",
    "jest-html-reporters": "1.2.1",
    "prettier": "2.0.2",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test"
    }
  }
}
